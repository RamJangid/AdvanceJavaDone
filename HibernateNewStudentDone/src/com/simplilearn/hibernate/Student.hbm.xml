<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.simplilearn.hibernate">

	<class name="Student" table="STUDENT_INFO">

		<id name="stuid" column="STUDENT_ID" type="int">	
		<generator class="increment" />	
		</id>		

		<property name="stuName"  column="STUDENT_NAME"/>
		<property name="stuEmail" column="STUDENT_EMAIL"/>
		<property name="phone" column="STUDENT_PHONE" type="int"/>
		
	</class>
</hibernate-mapping>